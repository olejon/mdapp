<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/recyclerview_layout" style="@style/recyclerview_layout">

    <android.support.design.widget.AppBarLayout android:id="@+id/notes_layout_appbar" style="@style/appbar">

        <android.support.design.widget.CollapsingToolbarLayout android:id="@+id/notes_toolbar_layout" style="@style/collapsing_toolbar">

            <ImageView android:src="@drawable/notes" android:contentDescription="@string/image_content_description" style="@style/collapsing_toolbar_image"/>

            <android.support.v7.widget.Toolbar android:id="@+id/notes_toolbar" style="@style/collapsing_toolbar_toolbar"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView android:id="@+id/notes_cards" style="@style/notes_cards"/>

    <TextView android:id="@+id/notes_empty" android:text="@string/notes_empty" style="@style/recyclerview_list_empty"/>

    <android.support.design.widget.FloatingActionButton android:id="@+id/notes_fab" android:src="@drawable/ic_add_white_24dp" app:layout_anchor="@id/recyclerview_layout" app:layout_anchorGravity="bottom|right|end" style="@style/fab_layout"/>

</android.support.design.widget.CoordinatorLayout>