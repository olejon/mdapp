<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/layout_match_width_match_height">
	<android.support.v7.widget.Toolbar android:id="@+id/clinicaltrials_toolbar" android:layout_alignParentTop="true" style="@style/toolbar">
		<EditText android:id="@+id/clinicaltrials_toolbar_search" android:hint="@string/clinicaltrials_toolbar_search_hint" style="@style/clinicaltrials_toolbar_search_edittext"/>
	</android.support.v7.widget.Toolbar>
	<ListView android:id="@+id/clinicaltrials_list" android:layout_below="@+id/clinicaltrials_toolbar" style="@style/layout_match_width_match_height"/>
	<ScrollView android:id="@+id/clinicaltrials_list_empty" android:layout_below="@+id/clinicaltrials_toolbar" style="@style/layout_match_width_match_height_vertical_scrollbar">
		<LinearLayout style="@style/list_empty_layout">
			<TextView android:text="@string/clinicaltrials_no_recent_searches" style="@style/list_title_empty"/>
			<TextView android:text="@string/clinicaltrials_information" style="@style/list_information_empty"/>
		</LinearLayout>
	</ScrollView>
	<android.support.design.widget.FloatingActionButton android:id="@+id/clinicaltrials_fab" android:layout_alignParentEnd="true" android:layout_alignParentBottom="true" android:src="@drawable/ic_search_white_24dp" style="@style/fab_layout"/>
</RelativeLayout>