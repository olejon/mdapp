<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" style="@style/layout_match_width_match_height">
	<android.support.v7.widget.Toolbar android:id="@+id/main_webview_toolbar" android:layout_alignParentTop="true" style="@style/toolbar">
		<EditText android:id="@+id/main_webview_toolbar_search" android:hint="@string/main_webview_toolbar_search_hint" style="@style/main_webview_toolbar_search_edittext" tools:ignore="Autofill"/>
	</android.support.v7.widget.Toolbar>
	<ProgressBar android:id="@+id/main_webview_toolbar_progressbar_horizontal" android:layout_alignBottom="@+id/main_webview_toolbar" style="@style/toolbar_progressbar_horizontal"/>
	<WebView android:id="@+id/main_webview_content" android:layout_below="@+id/main_webview_toolbar" style="@style/layout_match_width_match_height_vertical_scrollbar"/>
</RelativeLayout>